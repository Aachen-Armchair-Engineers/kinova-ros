<launch>
  <arg name="robot_name" default="j2n6s300"/>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find kinova_control)/config/$(arg robot_name)_control.yaml" command="load"/>
 
  <!-- load the controllers -->
  <!--
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/kinova" 
    args="$(arg robot_name)_joint_1_position_controller $(arg robot_name)_joint_2_position_controller  
          $(arg robot_name)_joint_3_position_controller $(arg robot_name)_joint_4_position_controller
          $(arg robot_name)_joint_5_position_controller $(arg robot_name)_joint_6_position_controller          
          joint_state_controller"/>
  -->

  <!-- Joint trajectory  controller -->
  <node name="$(arg robot_name)_trajectory_controller" pkg="controller_manager" type="spawner" 
     output="screen" ns="$(arg robot_name)" args="$(arg robot_name)_position_trajectory_controller"/>


  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/kinova/joint_states" />
  </node>

</launch>
